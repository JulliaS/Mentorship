@{
    ViewData["Title"] = "Home Page";
}
@model string
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core" target="_blank" >building Web apps with ASP.NET Core</a>.</p>

    <button onclick="location.href = '@Url.Action("LoadData", "Home")'"> Load Data </button>
    <p align="left">@Model</p>

    <button onclick="move()"> Start progress bar</button>
</div>

<br>
<div class="progress">
    <div id="myBar" class="progress-bar active" style="width: 0%"></div>
</div>

<script>
    var i = 0;

    function move() {
        i = 1;
        var elem = document.getElementById("myBar");
        var width = 1;
        var id = setInterval(frame, 10);

        function frame() {
            if (width >= 100) {
                clearInterval(id);
                i = 0;
            } else {
                width++;
                elem.style.width = width + "%";
            }
        }
    }

</script>
